{% extends "KingstonHyperxBundle::layout.html.twig" %}
{% block content %}
        <div id="cont-goods" class="g-goods">
            <div class="b-goods-inner">
                <div class="goods-cats">
                    <ul class="top-menu">
                        {% for entity in entities %}
                        <li class="m1" data-cat-id="1" data-owner-id="0" id="cat-button-1"><span>{{ entity.shortName }}</span></li>
                        {% endfor%}
                        <li class="m0 active" data-cat-id="0" data-owner-id="0" id="cat-button-0"><span>Продукты</span></li>
                    </ul>
                    <del class="clr"></del>
                    <div class="goods-descr">
                        <div id="goods-descr-cont"></div>
                    </div>

                    <div id="cat-descr">
                        <div class="scroll-pane inner">
                            <div>
                                <div class="title"></div>
                                <div class="descr"></div>
                            </div>
                        </div>
                    </div>

                    <div class="total-cats" id="total-cats">
                        <div class="cats-cont" id="cats-0">
                            <ul class="cats">
                            {% for entity in entities %}
                                <li class="c11">
                                    <a data-cat-id="{{ entity.id }}" data-owner-id="0" href="{{ path('productcategory_show', { 'id': entity.id }) }}"><img alt="Модули памяти Kingston HyperX" src="http://hyperx.com.ua/files/catalog_cat/images/0/1/moduli-pamjati-kingston-hyperx_1_p0.png"></a>
                                    <a class="title" data-cat-id="1" data-owner-id="0" href="{{ path('productcategory_show', { 'id': entity.id }) }}">{{ entity.name }}</a>
                                    <del class="clr"></del>
                                </li>
                            {% endfor%}
                            </ul>
                        </div>
                    </div>
                </div>
                <a href="#" id="btn-go-back"></a>
                <div class="b-check-original">
                    <a href="http://www.kingston.com/ru/memory/hyperx/decoder/" target="_blank" class="ajx-std">Проверить оригинальность продукции &gt;&gt;</a>
                    <span>Проверка за одну минуту</span>
                </div>

                <div class="b-select-config">
                    <a href="#" id="select-config" class="ajx-std">ВЫБРАТЬ СПЕЦИФИКАЦИЮ ПРОДУКЦИИ &gt;&gt;</a>
                </div>
            </div>
        </div>  
{% endblock %}
