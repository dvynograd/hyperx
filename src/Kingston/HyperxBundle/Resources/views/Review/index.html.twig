{% extends "KingstonHyperxBundle::layout.html.twig" %}
{% block content %}
<div class="g-container">
    <div class="inner">
        <div class="b-reviews" id="cont-reviews">
            <h3>Обзоры</h3>

            <div id="reviews-slider">
                <ul>
                    {% for entity in entities %}
                        <li>
                            <div class="item">
                                <a href="{{ path('review_show', { 'id': entity.id }) }}" class="img" data-id="38" target="_blank"><img src="{{ asset('bundles/hyperx/images/bg_review_img.png') }}" alt="{{ entity.description }}" style="background-image: url(http://hyperx.com.ua/files/news_tape/images/0/38/pamjat-kingston-hyperx-predato_38_s2.png)"/></a>
                                <p>
                                    <a data-id="38" href="{{ path('review_show', { 'id': entity.id }) }}">{{ entity.content|slice(0,150) }}...</a>
                                    <span><a data-id="38" href="{{ path('review_show', { 'id': entity.id }) }}">{{ entity.title }}</a></span>
                                </p>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="pager" id="reviews-pager">
                <span class="active"></span>
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>


<div id="news-full">
    <h3 data-href="/news/" id="news-cont-title">Обзоры</h3>
    <del class="clr"></del>
    <div class="news-inn">
        <div id="news-full-cont">
            <div class="b-news-list b-news-list-inner b-reviews-list">
                {% for entity in entities %}
                    <div class="item">
                        <small>{% if entity.date %}{{ entity.date|date('d/m/Y') }}{% endif %}</small>
                        <a href="{{ path('review_show', { 'id': entity.id }) }}" data-id="{{ entity.id }}"><img alt="{{ entity.title }}" src="http://hyperx.com.ua/files/news_tape/images/0/38/pamjat-kingston-hyperx-predato_38_s100.png">{{ entity.title }}</a>
                        <p>{{ entity.description }}</p>
                        <del class="clr"></del>
                    </div>
                {% endfor %}
        </div>
        </div>
    </div>
</div>

    </div>
</div>


{% endblock %}

