<h1>ProductCategory</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Shortname</th>
            <td>{{ entity.shortName }}</td>
        </tr>
        <tr>
            <th>Url</th>
            <td>{{ entity.url }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('productcategory') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('productcategory_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('productcategory_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>


<table class="records_list">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Shortname</th>
        <th>Url</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td><a href="{{ path('productcategory_product', { 'id': product.id }) }}">{{ product.id }}</a></td>
            <td>{{ product.name }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
